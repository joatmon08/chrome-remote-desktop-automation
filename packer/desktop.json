{
  "variables": {
    "username": "{{env `TF_VAR_crd_user`}}",
    "gcloud_zone": "{{env `GCLOUD_ZONE`}}"
  },
  "builders": [
    {
      "image_name": "chrome-remote-desktop-debian-9-{{timestamp}}",
      "instance_name": "crd-test-{{uuid}}",
      "image_family": "debian-9",
      "type": "googlecompute",
      "project_id": "hc-da-test",
      "source_image_family": "debian-9",
      "source_image_project_id": "debian-cloud",
      "ssh_username": "{{user `username`}}",
      "zone": "{{user `gcloud_zone`}}",
      "machine_type": "n1-standard-1",
      "labels": {
        "builder": "packer",
        "owner": "{{user `username`}}"
      },
      "image_labels": {
        "builder": "packer",
        "owner": "{{user `username`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "scripts": ["./install-desktop.sh", "./install-devtools.sh"]
    }
  ]
}